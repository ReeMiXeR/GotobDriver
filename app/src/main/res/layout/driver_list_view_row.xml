<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/_trip_number_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="23dp"
        android:text="Номер рейса: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/trip_id_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/_trip_number_view"
        android:layout_toEndOf="@+id/_trip_number_view"
        android:layout_toRightOf="@+id/_trip_number_view"
        android:text="99"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/depart_time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/_trip_number_view"
        android:layout_alignStart="@+id/_trip_number_view"
        android:layout_below="@+id/_trip_number_view"
        android:text="2016-07-05 01:27:10"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/arrive_time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/depart_time_view"
        android:layout_alignStart="@+id/depart_time_view"
        android:layout_below="@+id/depart_time_view"
        android:text="2016-07-05 01:27:10"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/depart_point_view"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/arrive_time_view"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_toEndOf="@+id/arrive_time_view"
        android:layout_toRightOf="@+id/arrive_time_view"
        android:text="Kemerovo"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/arrive_point_view"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/depart_point_view"
        android:layout_alignStart="@+id/depart_point_view"
        android:layout_alignTop="@+id/depart_time_view"
        android:text="Kukevo"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/seats_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/depart_point_view"
        android:layout_alignLeft="@+id/price_view"
        android:layout_alignStart="@+id/price_view"
        android:text="8"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/price_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/depart_point_view"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_toEndOf="@+id/depart_point_view"
        android:layout_toRightOf="@+id/depart_point_view"
        android:text="300"
        android:textSize="18dp" />

</RelativeLayout>